{% macro checkbox(props) %}
		<div class="custom-checkbox">
				<input id="{{ props.id }}" class="custom-checkbox__input" type="checkbox" {% if props.inputAttributes %} {{ props.inputAttributes }} {% endif %}>
				<label for="{{ props.id }}" class="custom-checkbox__label">
						<span class="custom-checkbox__appearance"></span>
						<span>
								{{ props.text }}
						</span>
				</label>
		</div>
{% endmacro %}
