{% from "../../components/icon/icon.nunj" import icon %}

<div class="header">
		<div class="container">
				<a class="header__logo" href="/">
						{{ icon({
							className: 'header__logo-icon',
							iconName: 'logo'
						}) }}
				</a>
				<a class="header__search" href="#">
						{{ icon({
						className: 'header__search-icon',
						iconName: 'search'
					}) }}
				</a>
				<button class="header__cart" data-cart-button="data-cart-button">
						<span class="header__cart-products-count _visible" data-cart-product-count="data-cart-product-count">
								2
						</span>
						{{ icon({
						className: 'header__cart-icon',
						iconName: 'cart'
					}) }}
				</button>
				<button class="header__mobile-menu-button" data-mobile-menu-button="data-mobile-menu-button">
						<span class="header__mobile-menu-button-line"></span>
						<span class="header__mobile-menu-button-line"></span>
						<span class="header__mobile-menu-button-line"></span>
				</button>
		</div>
</div>
